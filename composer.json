{
    "$schema": "https://raw.githubusercontent.com/composer/composer/main/res/composer-schema.json",
    "name": "antsahib/platform",
    "description": "أنت صاحب المنصة - منصة تمكين القيادة والتعبير العربي",
    "type": "project",
    "license": "proprietary",
    "keywords": ["platform", "arabic", "leadership", "expression", "php"],
    "homepage": "https://antsahib.almunsaa.com",
    "authors": [
        {
            "name": "Kilo Code",
            "email": "info@antsahib.almunsaa.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "ext-gd": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "AntSahib\\": "src/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8000",
        "test": "phpunit",
        "setup": [
            "mkdir -p data uploads logs",
            "chmod -R 755 data uploads logs",
            "echo '{\"users\":[],\"sessions\":[],\"posts\":[],\"comments\":[],\"ideas\":[]}' > data/platform_data.json"
        ]
    },
    "config": {
        "platform": {
            "php": "8.0"
        },
        "minimum-stability": "stable",
        "prefer-stable": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}